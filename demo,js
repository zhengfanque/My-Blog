function music_control(){
	var bgmusic=document.getElementById("bgmusic");
	var mb=document.getElementById("mb");
	var song=document.getElementById("song");
	if(mb.innerHTML=="Play"){
		bgmusic.play();
		mb.innerHTML="Pause";
		document.getElementById("song").id="song_change";
	}else{
		bgmusic.pause();
		mb.innerHTML="Play";
		document.getElementById("song_change").id="song";
	}
}
